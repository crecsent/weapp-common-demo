.tutorial > view {
  text-align: center;
  margin: 30rpx;
  padding: 30rpx;
  box-sizing: border-box;
  width: 690rpx;
  border-radius: 10rpx;
  background-color: white;
  box-shadow: rgba(17, 17, 26, 0.05) 0px 4px 16px, rgba(17, 17, 26, 0.05) 0px 8px 32px;
  margin-bottom: 30rpx;
}

.tutorial > view > view {
  margin-bottom: 30rpx;
}

.tutorial__title {
  font-weight: bold;
  font-size: 1.2em;
  color: var(--black);
}

.tutorial__intro {
  font-size: 1em;
  color: var(--grey);
}

.tutorial__btn {
  border: 1px solid var(--grey);
  background-color: var(--white);
  color: var(--grey);
}

.tutorial__link {
  display: inline;
  color: var(--blue);
  font-size: 1.2em;
}

.tutorial__link::before {
  content: "\e756";
  font-family: "iconfont";
}

.tutorial__input {
  width: 100%;
  height: 80rpx;
}

.tutorial__item {
  border-top: 1px solid var(--grey);
  line-height: 60rpx;
}

.tutorial__item:first-child {
  border-top: none;
}
